@model Atlas.UI.Models.PagedResultViewModel<Atlas.UI.Models.ContatoViewModel>

@{
    ViewBag.Title = "Contatos";
}

@Html.Partial("_Search",(string)ViewBag.Term)

<br />

@Html.ActionLink("Adicionar","New","Contatos",null,new{@class="edit"})

<ul id="contatos" 
    data-url="@Url.Action("Index","Contatos")" 
    data-total-pages="@Model.TotalPages" 
    data-params='{"term":"@ViewBag.Term"}'>
    @Html.Partial("_Contatos",Model)
</ul>

